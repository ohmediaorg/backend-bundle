{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}Emails{% endblock %}

{% block breadcrumbs %}
  {{ bootstrap_breadcrumbs(
    bootstrap_breadcrumb(bootstrap_icon('envelope') ~ ' Emails', 'email_index'),
  ) }}
{% endblock %}

{% block main %}
  <div class="card">
    <div class="card-body">
      <div class="card-title card-title-with-count">
        <h1 class="card-title-heading">Emails</h1>
        <div class="card-title-count">
          {{ bootstrap_badge_primary(pagination.count) }}
        </div>
      </div>

      {{ form_start(search_form) }}
        <div class="row align-items-end">
          <div class="col-lg-6 col-sm-6">
            {{ form_row(search_form.search) }}
          </div>
          <div class="col-lg-12 col-sm-6">
            <button class="btn btn-outline-dark mb-3" type="submit">Search</button>
            <a class="btn btn-secondary mb-3" href="{{ path('email_index') }}">Reset</a>
          </div>
        </div>
      {{ form_end(search_form) }}

      <table class="table table-striped">
      <thead>
        <tr>
          <th>Recipients</th>
          <th>Subject</th>
          <th>Sent</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        {% for email in pagination.results %}
          <tr>
            <td>
              <small class="d-block">
                {{ email.to|join("\n")|nl2br }}
              </small>
              {% if email.cc %}
                <small class="d-block">
                  <b>cc:</b> {{ email.cc|join("\n")|nl2br }}
                </small>
              {% endif %}
              {% if email.bcc %}
                <small class="d-block">
                  <b>bcc:</b> {{ email.bcc|join("\n")|nl2br }}
                </small>
              {% endif %}
            </td>
            <td>{{ email.subject }}</td>
            <td>{{ email.createdAt|datetime }}</td>
            <td>
              {% if is_granted(view_attribute, email) %}
                <a href="{{ path('email_view', {id: email.id}) }}" target="_blank">
                  View
                </a>
              {% endif %}
            </td>
          </tr>
        {% else %}
        <tr><td colspan="100%" class="text-center">No emails found.</td></tr>
        {% endfor %}
      </tbody>
      </table>

      {{ bootstrap_pagination(pagination) }}

      <small>{{ bootstrap_pagination_info(pagination) }}</small>
    </div>
  </div>
{% endblock %}
